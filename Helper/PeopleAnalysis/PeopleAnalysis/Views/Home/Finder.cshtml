@model PeopleAnalysis.ViewModels.FindPeopleViewModel
@{
    ViewData["Title"] = "Finder";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<form asp-action="Finder" method="post" >
    <h4>Find people</h4>
    <hr />
    <div class="form-group">
        <label></label>
        <input asp-for="FindText" class="form-control" />
    </div>

    <div class="form-group">
        <button type="submit" class="btn btn-primary">Find</button>
    </div>
    <div class="form-group">
        <p>
            <a id="forgot-password">Forgot your password?</a>
        </p>
    </div>
</form>


@model IEnumerable<PeopleAnalysis.ViewModels.UserViewModel>

@{
    ViewData["Title"] = "Index";
}

<div class="modal fade" id="delete-modal" tabindex="-1" role="dialog" aria-hidden="true">
    <div class="modal-dialog" role="document">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title">Удаление</h5>
                <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                    <span aria-hidden="true">&times;</span>
                </button>
            </div>
            <div class="modal-body">
                Вы уверены что хотите удалить этого пользователя?
            </div>
            <div class="modal-footer">
                <form method="post" asp-action="Delete">
                    @Html.Hidden("toDelete")
                    <input type="submit" value="Да" class="btn btn-success" />
                </form>
                <button type="button" class="btn btn-danger" data-dismiss="modal">Нет</button>
            </div>
        </div>
    </div>
</div>

<p>
    <a asp-action="Create">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                Login
            </th>
            <th>
                Role
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.Login)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Role)
                </td>
                <td>
                    <a asp-action="Edit" asp-route-id="@item.Id">Edit</a> |
                    <a href="#" data-toggle="modal" data-target="#delete-modal" onclick="$('#toDelete').val('@item.Id')">Удалить</a>
                </td>
            </tr>
        }
    </tbody>
</table>

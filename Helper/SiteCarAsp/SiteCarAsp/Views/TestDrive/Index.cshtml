@model TestDriveViewModel

<div class="m-3">
    <div class="container card">

        <form action="@Url.Action("Create", "TestDrive")" method="post" class="card-body">

            <h2>Send request to Test Drive?</h2>

            <div class="form-group">
                <label asp-for="Fio"></label>
                <input asp-for="Fio" class="form-control" type="text" />
                <span asp-validation-for="Fio" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Phone"></label>
                <input asp-for="Phone" class="form-control" type="tel" />
                <span asp-validation-for="Phone" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="CarId">Car</label>
                <select class="form-control" asp-for="CarId" asp-items="Model.Cars"></select>
                <span asp-validation-for="CarId" class="text-danger"></span>
            </div>

            <button type="submit" class="btn btn-primary">Submit</button>

        </form>

    </div>
</div>
<UserControl x:Class="Childhood.Forms.Controls.Models.List.InformationList"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:Childhood.Forms.Controls.Models.List"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">
    <Grid>
        <TabControl>
            <TabItem Header="Меню">
                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition></RowDefinition>
                        <RowDefinition Height="50px"></RowDefinition>
                    </Grid.RowDefinitions>
                    <RichTextBox Name="Menu"></RichTextBox>
                    <Button Name="Save" Click="SaveMenu" Grid.Row="1">Сохранить</Button>
                </Grid>
            </TabItem>
        </TabControl>
    </Grid>
</UserControl>

@model TranslateChatter.Models.Room
@inject TranslateChatter.Services.ILocalizer localizer

@{
    ViewData["Title"] = "Delete";
}

<h3>@localizer["SureDelete"]</h3>
<div>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">
            @localizer["Name"]
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Name)
        </dd>
    </dl>

    <form asp-action="Delete">
        <input type="hidden" asp-for="Id" />
        <input type="submit" value="@localizer["Delete"]" class="btn btn-danger" /> |
        <a asp-action="Index">@localizer["Back"]</a>
    </form>
</div>

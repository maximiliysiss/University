<UserControl x:Class="Chemical.Forms.Controls.Models.Model.DetailControlContent"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:Chemical.Forms.Controls.Models.Model"
             mc:Ignorable="d" 
             Height="250" Width="400">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition></ColumnDefinition>
            <ColumnDefinition></ColumnDefinition>
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition Height="50px"></RowDefinition>
            <RowDefinition></RowDefinition>
        </Grid.RowDefinitions>

        <Label FontSize="14pt" VerticalAlignment="Center" HorizontalAlignment="Center">Название</Label>
        <TextBox Grid.Column="1" Text="{Binding Name}"  FontSize="14pt" VerticalAlignment="Center"></TextBox>
        <Grid Name="Materials" Grid.Row="1" Grid.ColumnSpan="2"></Grid>
    </Grid>
</UserControl>

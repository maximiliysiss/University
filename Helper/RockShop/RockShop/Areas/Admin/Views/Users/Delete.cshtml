@model RockShop.Data.Models.User

@{
    ViewData["Title"] = RockShop.Properties.Resource.Delete;
    Layout = "~/Areas/Admin/Views/Shared/_Layout.cshtml";
}

<h3>@RockShop.Properties.Resource.DeleteSure</h3>
<div>
    <h4>@RockShop.Properties.Resource.User</h4>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Login)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Login)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.PasswordHash)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.PasswordHash)
        </dd>
    </dl>

    <form asp-action="Delete">
        <input type="hidden" asp-for="Id" />
        <input type="submit" value="@RockShop.Properties.Resource.Delete" class="btn btn-danger" /> |
        <a asp-action="Index">Back to List</a>
    </form>
</div>

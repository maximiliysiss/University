@model IEnumerable<RockShop.Data.Models.Order>

@{
    ViewData["Title"] = RockShop.Properties.Resource.Orders;
    Layout = "~/Areas/Admin/Views/Shared/_Layout.cshtml";
}

<h1>@RockShop.Properties.Resource.Orders</h1>

<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Name)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Count)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.CreationDateTime)
            </th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.Name)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Count)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.CreationDateTime)
                </td>
            </tr>
        }
    </tbody>
</table>
